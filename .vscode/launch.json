{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "üêõ Debug AoC Solution",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["tsx", "--inspect-brk"],
      "program": "${workspaceFolder}/src/runner.ts",
      "args": ["${input:year}", "${input:day}"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "outputCapture": "std",
      "autoAttachChildProcesses": true
    },
    {
      "name": "üîÑ Debug Last AoC Solution",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["tsx", "--inspect-brk"],
      "program": "${workspaceFolder}/src/runner.ts",
      "args": ["2018", "7"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "outputCapture": "std",
      "autoAttachChildProcesses": true
    },
    {
      "name": "üîÑ Debug Current Solution (2022/15)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["tsx", "--inspect-brk"],
      "program": "${workspaceFolder}/src/runner.ts",
      "args": ["2022", "15"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "outputCapture": "std",
      "autoAttachChildProcesses": true
    }
  ],
  "inputs": [
    {
      "id": "year",
      "description": "Advent of Code Year (e.g., 2024)",
      "default": "2024",
      "type": "promptString"
    },
    {
      "id": "day",
      "description": "Day number (1-25)",
      "default": "1",
      "type": "promptString"
    }
  ]
}