    "@swc/core": "^1.3.107",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.4.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "chalk": "^5.3.0"
  }
